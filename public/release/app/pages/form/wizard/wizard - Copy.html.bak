                <ba-wizard>
                    <!-- Wizard step for Campaign -->
                    <ba-wizard-step title="General" form="vm.generalInfoForm">
                        <form name="vm.generalInfoForm" novalidate>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group has-feedback"
                                         ng-class="{'has-error': vm.generalInfoForm.name.$invalid && (vm.generalInfoForm.name.$dirty || vm.generalInfoForm.$submitted)}">
                                        <label for="name1">Name</label>
                                        <input type="text" class="form-control" id="name1" name="name" placeholder="Name" ng-model="vm.generalInfo.name" required>
                                        <span class="help-block error-block basic-block">Required</span>
                                    </div>
                                    <div class="form-group" ng-class="{'has-error': vm.generalInfoForm.description.$invalid && (vm.generalInfoForm.description.$dirty || vm.generalInfoForm.$submitted)}">
                                        <label for="desc1">Description</label>
                                        <input type="text" class="form-control" id="desc1" name="description" placeholder="Description" ng-model="vm.generalInfo.description" required>
                                        <span class="help-block error-block basic-block">Proper description required</span>
                                    </div>
                                </div>
                            </div>
                        </form>
